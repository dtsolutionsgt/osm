<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/color_light"
    tools:context=".InvLista">

    <!-- Encabezado -->
    <RelativeLayout
        android:id="@+id/reltop"
        android:layout_width="match_parent"
        android:layout_height="64dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:scaleType="fitXY"
            android:src="@drawable/mposgerhead" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Inventario"
            android:textColor="#FFFFFF"
            android:textSize="34sp"
            android:textStyle="bold|italic" />
    </RelativeLayout>

    <!-- Campo de búsqueda -->
    <EditText
        android:id="@+id/editTextText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reltop"
        android:layout_margin="8dp"
        android:hint="Buscar producto..."
        android:padding="10dp"
        android:textSize="16sp"
        android:background="@android:drawable/editbox_background"/>
    <EditText
        android:id="@+id/editTextText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reltop"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="5dp"
        android:layout_toStartOf="@+id/textView4"
        android:ems="10"
        android:inputType="text" />
    <!-- Lista de productos -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/editTextText"
        android:layout_above="@id/linbuttons"
        android:layout_margin="4dp"/>

    <!-- Botones de acción -->
    <LinearLayout
        android:id="@+id/linbuttons"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_above="@id/relbot"
        android:orientation="horizontal"
        android:weightSum="3">

        <TextView
            android:id="@+id/textView11"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/frame_btn"
            android:gravity="center"
            android:onClick="doEgreso"
            android:text="Egreso"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/frame_btn"
            android:gravity="center"
            android:onClick="doAjuste"
            android:text="Ajuste"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/frame_btn"
            android:gravity="center"
            android:onClick="doIngreso"
            android:text="Ingreso"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Footer -->
    <RelativeLayout
        android:id="@+id/relbot"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/color_medium">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:onClick="doExit"
            app:srcCompat="@drawable/arr_back" />
    </RelativeLayout>

</RelativeLayout>